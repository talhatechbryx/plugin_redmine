<%# binding.pry %>
<%= form_for @solution do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :reason %><br>
    <%= f.text_area :reason %>
  </p>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author, disabled: true, value: @author %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>